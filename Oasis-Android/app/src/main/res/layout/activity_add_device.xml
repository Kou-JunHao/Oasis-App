<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    tools:context=".ui.device.AddDeviceActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceContainer"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        app:title="添加设备"
        app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        app:titleTextColor="?attr/colorOnSurface"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="?attr/colorOnSurface"
        style="@style/Widget.Material3.Toolbar" />

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Hero Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorPrimaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/ic_device_water_dispenser"
                        app:tint="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加新设备"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimaryContainer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="请填写设备信息以添加到系统"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnPrimaryContainer"
                        android:alpha="0.8" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Input Form -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- 设备ID输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="设备ID"
                        app:boxBackgroundMode="filled"
                        app:startIconDrawable="@drawable/ic_qr_code"
                        app:helperText="必填项 - 设备的唯一标识符">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDeviceId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 设备名称输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="设备名称"
                        app:boxBackgroundMode="filled"
                        app:startIconDrawable="@drawable/ic_label"
                        app:helperText="可选 - 为设备设置一个友好的名称">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDeviceName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- 设备类型输入 -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="设备类型"
                        app:boxBackgroundMode="filled"
                        app:startIconDrawable="@drawable/ic_category"
                        app:helperText="可选 - 设备的类型或分类">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDeviceType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 设备ID说明 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="设备ID通常可以在设备标签或二维码中找到"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/rounded_background"
                android:drawableStart="@drawable/ic_info"
                android:drawablePadding="8dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <!-- 重置按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReset"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="重置"
                    android:textColor="?attr/colorOnSurface" />

                <!-- 添加设备按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddDevice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加设备"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- MD3E Loading indicator with a container -->
    <com.google.android.material.loadingindicator.LoadingIndicator
        android:id="@+id/progressBar"
        style="@style/Widget.App.LoadingIndicator.Contained"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Success Animation Container -->
    <FrameLayout
        android:id="@+id/successAnimationContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:visibility="gone"
        android:alpha="0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Success Icon -->
            <ImageView
                android:id="@+id/successIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/ic_check_circle"
                app:tint="?attr/colorPrimary"
                android:scaleX="0"
                android:scaleY="0" />

            <!-- Success Text -->
            <TextView
                android:id="@+id/successTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备添加成功！"
                android:textColor="?attr/colorOnSurface"
                android:textSize="24sp"
                android:textStyle="bold"
                android:alpha="0" />

            <TextView
                android:id="@+id/successSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="您的设备已成功添加到系统"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="16sp"
                android:alpha="0" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>